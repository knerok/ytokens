{
  "source": [
    "tokens/**/*.json"
  ],
  "platforms": {
    "scss": {
      "buildPath": "dist/",
      "transformGroup": "scss",
      "files": [
        {
          "destination": "variables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "js": {
      "buildPath": "dist/",
      "transforms": [
        "name/cti/constant"
      ],
      "files": [
        {
          "destination": "variables.js",
          "format": "javascript/es6"
        }
      ]
    }
  }
}
